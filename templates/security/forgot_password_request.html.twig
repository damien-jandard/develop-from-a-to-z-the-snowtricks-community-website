{% extends 'base.html.twig' %}

{% block title %}Réinitialisation de mot de passe - Snowtricks{% endblock %}

{% block main %}
    <section id="authentication" class="authentication section-bg">
        <div class="container">
            <div class="section-title">
                <h2>Réinitialisation de mot de passe</h2>
            </div>
            <div class="row">
                <div class="col-lg-8 offset-lg-2 mt-5 mt-lg-0">
                    {{ form_start(forgotPasswordForm, {'attr': {'class': 'authentication-form'}}) }}
                        <div class="form-group mt-3">
                            {{ form_widget(forgotPasswordForm.email) }}
                        </div>
                        <div class="text-center mt-3">
                            <button type="submit">Réinitialiser <i class="bx bx-reset"></i></button>
                        </div>
                    {{ form_end(forgotPasswordForm) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
