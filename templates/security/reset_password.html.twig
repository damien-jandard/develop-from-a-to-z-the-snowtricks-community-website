{% extends 'base.html.twig' %}

{% block title %}Modification de mot de passe - Snowtricks{% endblock %}

{% block main %}
    <section id="authentication" class="authentication section-bg">
        <div class="container">
            <div class="section-title">
                <h2>Modification de votre mot de passe</h2>
            </div>
            <div class="row">
                <div class="col-lg-8 offset-lg-2 mt-5 mt-lg-0">
                    {{ form_start(resetPasswordForm, {'attr': {'class': 'authentication-form'}}) }}
                        <div class="form-group mt-3">
                            {{ form_widget(resetPasswordForm.resetPassword.first) }}
                        </div>
                        <div class="form-group mt-3">
                            {{ form_widget(resetPasswordForm.resetPassword.second) }}
                        </div>
                        {% if not resetPasswordForm.vars.valid %}
                            <div class="error-message d-block mt-3">
                                {{ form_errors(resetPasswordForm.resetPassword.first) }}
                                {{ form_errors(resetPasswordForm.resetPassword.second) }}
                            </div>
                        {% endif %}
                        <div class="text-center mt-3">
                            <button type="submit">RÃ©initialiser mon mot de passe <i class="bx bx-reset"></i></button>
                        </div>
                    {{ form_end(resetPasswordForm) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
